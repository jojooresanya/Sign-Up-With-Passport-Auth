<div class="container">
  <div class="fhero">
    <h1>App</h1>
    <div class="form-area">
      <ul class="flash__msgs">
        <%- include('./partials/messages.ejs') %>
      </ul>
      <form action="/user/login" method="POST" id="login-form">
        <div class="inp">
          <label for="email">Email</label>
          <input type="email" name="email" placeholder="Enter Email" required value="<%= typeof email != 'undefined' ? email : '' %>">
        </div>
        <div class="inp">
          <label for="password">password</label>
          <input type="password" name="password" placeholder="Enter Password" required value="<%= typeof password != 'undefined' ? password : '' %>">
        </div>
        <button class="submit">login</button>
      </form>
    </div>
    <p>Not Registered? <a href="/user/signup" class="fa">Sign up</a></p>
  </div>
</div>

<script src="/js/app.js"></script>